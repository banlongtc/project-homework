@{
    ViewData["Title"] = "Sổ quản lý NVL";
    Layout = "_Layout";
    var breadcrumbs = ViewBag.Breadcrumbs as List<Breadcrumb>;
    var allMaterials = ViewData["AllMaterials"] as List<MPLUS_GW_WebCore.Controllers.Materials.ListAllMaterials>;
}
<div class="text-center page-title">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>
<div class="container position-relative">
    @await Component.InvokeAsync("Breadcrumb", new { breadcrumbs = breadcrumbs })
    <div class="mb-3 d-flex">
        <div class="d-flex align-items-center">
            <label class="form-label mb-0" for="selectMaterials">Chọn NVL: </label>
            <input class="form-control" list="dataListMaterials" name="SelectMaterials" id="selectMaterials" placeholder="Nhập nguyên vật liệu cần tìm....." />
            <datalist id="dataListMaterials">
                @if (allMaterials != null)
                {
                    foreach (var item in allMaterials)
                    {
                        <option value="@item.ItemCode"></option>
                    }
                }
            </datalist>
        </div>
        <div class="ms-3 filter-date-group">
            <label class="form-label mb-0">Chọn tháng: </label>
            <input type="text" class="input-date-view ms-2" />
        </div>
        <button asp-controller="FlowMaterials" asp-action="ViewItem" asp-route-itemcode="" class="btn btn-md btn-success disabled d-flex align-items-center ms-3" id="btnViewMaterial">Xem</button>
    </div>
</div>
<div class="container-fluid">
    <div class="d-none" id="containerDataManageMaterials">
        <div class="info-manage-materials d-flex"></div>
        <div class="content-render">
            <div class="mb-2 mt-2 fs-6">
                Danh sách các lô NVL trong tháng: <span id="monthSelected" class="fst-italic fw-bold"></span>.
                <span>Vui lòng chọn số lô để xem chi tiết.</span>
            </div>
            <div class="row" id="tabLotMaterials"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="showDetailMaterial" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true" aria-labelledby="showDetailMaterialLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="showDetailMaterialLabel">Thông tin chi tiết </h5>
                <button type="button" class="btn-close btn-close-detail" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="tabInfoMaterials" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="importedTab" data-bs-toggle="tab" data-bs-target="#importedContents" type="button" role="tab" aria-controls="importedContents" aria-selected="true">NVL đã nhập</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="usedMaterialTab" data-bs-toggle="tab" data-bs-target="#usedMaterialContents" type="button" role="tab" aria-controls="usedMaterialContents" aria-selected="false">Sử dụng</button>
                    </li>
                </ul>
                <div class="tab-content" id="tabInfoContents">
                    <div class="tab-pane content-by-lot fade show active" id="importedContents" role="tabpanel" aria-labelledby="importedTab">
                        <div class="mt-3 table-content d-none">
                            <table class="table text-center">
                                <thead>
                                    <tr>
                                        <th>Ngày, tháng</th>
                                        <th>Số Request</th>
                                        <th>Số lô NVL</th>
                                        <th>Số lượng nhập</th>
                                        <th>Người nhập</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr class='bg-success text-white'>
                                        <td colspan="3">Tổng</td>
                                        <td class="total-imported"></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane content-by-lot fade" id="usedMaterialContents" role="tabpanel" aria-labelledby="usedMaterialTab">
                        <div class="mt-3">
                            <table class="table text-center">
                                <thead>
                                    <tr>
                                        <th>Ngày, tháng</th>
                                        <th>Chủng loại</th>
                                        <th>Số lô sản xuất</th>
                                        <th>Số Request</th>
                                        <th>Lô NVL</th>
                                        <th>Số lượng Picking MES</th>
                                        <th>Số lượng sử dụng</th>
                                        <th>Số lượng tồn lô đang sử dụng theo số request</th>
                                        <th>Người xuất</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr class='bg-success text-white'>
                                        <td colspan="6">Tổng</td>
                                        <td class="total-used"></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary btn-close-detail">Đóng</button>
                <button class="btn btn-md btn-success d-flex align-items-center btn-exported-book" type="submit">
                    <i class="bx bx-cloud-download"></i>
                    <span class="ms-2">Tải về</span>
                </button>
            </div>
        </div>
    </div>
</div>
