@{
    ViewData["Title"] = "Import";
    // Layout = "_Admin";
    Layout = "_Layout";
    var Listitem = ViewData["Listitem"] as List<TblMasterProductItem>;
    var Listcd = ViewData["Listcd"] as List<TblLocation>;
